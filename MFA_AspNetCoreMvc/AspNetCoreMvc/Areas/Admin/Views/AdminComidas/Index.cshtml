@model IEnumerable<AspNetCoreMvc.Models.Comida>
@{
    ViewData["Title"] = "Index";
}
<h3>Comidas</h3>
<p>
    <a asp-action="Create">Criar Comnida</a>
</p>
<div class="row">
    <div class="col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsComidaPreferida)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoCurta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsComidaPreferida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ComidaId">Edita</a> |
                            <a asp-action="Details" asp-route-id="@item.ComidaId">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.ComidaId">Deleta</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
